# =============================================================================
# LinkedIn Job Application Tool - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# -----------------------------------------------------------------------------
# MongoDB Configuration
# -----------------------------------------------------------------------------
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=job_application

# Collection names
MONGODB_COLLECTION_JOBS=jobs
MONGODB_COLLECTION_RANKED=ranked_jobs
MONGODB_COLLECTION_CVS=generated_cvs
MONGODB_COLLECTION_APPLICATIONS=applications
MONGODB_COLLECTION_PROFILE=profile

# -----------------------------------------------------------------------------
# Apify Configuration (Scraper Service)
# -----------------------------------------------------------------------------
APIFY_API_TOKEN=apify_api_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
APIFY_ACTOR_ID=KfYqwOhOXqkqO4DF8

# Scraper settings
SCRAPE_INTERVAL_MINUTES=60
MAX_JOBS_PER_SCRAPE=100

# LinkedIn search parameters (defaults, can be overridden in config)
LINKEDIN_LOCATION=Switzerland
LINKEDIN_CONTRACT_TYPE=F
LINKEDIN_EXPERIENCE_LEVEL=4
LINKEDIN_WORK_TYPE=3
LINKEDIN_PUBLISHED_AT=r604800

# -----------------------------------------------------------------------------
# LLM Configuration (Ranker & Generator Services)
# -----------------------------------------------------------------------------
LLM_PROVIDER=openrouter
LLM_API_KEY=sk-or-v1-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
LLM_MODEL=anthropic/claude-haiku
LLM_BASE_URL=https://openrouter.ai/api/v1

# Alternative: OpenAI direct
# LLM_PROVIDER=openai
# LLM_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# LLM_MODEL=gpt-4o-mini
# LLM_BASE_URL=https://api.openai.com/v1

# Translation model (can be cheaper/faster)
TRANSLATION_MODEL=gpt-4o-mini

# -----------------------------------------------------------------------------
# Scoring Configuration (Ranker Service)
# -----------------------------------------------------------------------------
# Minimum score to pass (job must meet this threshold)
MIN_SCORE_THRESHOLD=30
# Minimum trigger keyword hits required
MIN_TRIGGER_HITS=2
# Points per trigger keyword match
TRIGGER_SCORE=10
# Points per support keyword match
SUPPORT_SCORE=4
# Bonus multiplier for matches in job title (vs description)
TITLE_MATCH_MULTIPLIER=1.5

# -----------------------------------------------------------------------------
# Generator Configuration
# -----------------------------------------------------------------------------
# Path to base CV template (PDF or DOCX)
BASE_CV_PATH=config/base_cv.pdf
# Output directory for generated CVs
OUTPUT_CV_DIR=output/cvs
# Output directory for generated cover letters
OUTPUT_COVER_DIR=output/covers

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
LOG_LEVEL=INFO
